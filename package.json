{
  "name": "@tiaohsun/vue-datatable-tailwind",
  "author": "tiaohsun",
  "version": "1.0.5",
  "description": "A Vue 3 data table component restructured and styled with TailwindCSS",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "typings": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Tiaohsun31/vue-datatable-tailwind.git"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    },
    "./style.css": {
      "import": "./dist/vue-datatable-tailwind.css",
      "require": "./dist/vue-datatable-tailwind.css"
    }
  },
  "style": "./dist/vue-datatable-tailwind.css",
  "files": [
    "dist",
    "types"
  ],
  "keywords": [
    "vue3",
    "datatable",
    "tailwindcss",
    "vue-component"
  ],
  "peerDependencies": {
    "vue": "^3.5.13",
    "tailwindcss": "^3.4.17"
  },
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "build:types": "vue-tsc --emitDeclarationOnly",
    "preview": "vite preview",
    "test:unit": "vitest",
    "build-only": "vite build",
    "type-check": "vue-tsc --build --force",
    "lint": "eslint . --fix",
    "format": "prettier --write src/"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.1",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.14.1",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vitest/eslint-plugin": "1.1.43",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.5.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.24.0",
    "eslint-plugin-vue": "^10.0.0",
    "jsdom": "^26.1.0",
    "npm-run-all2": "^7.0.2",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.3",
    "vite": "^6.3.2",
    "vite-plugin-dts": "^4.5.3",
    "vite-plugin-vue-devtools": "^7.7.5",
    "vitest": "^3.1.1",
    "vue-tsc": "^2.2.8"
  }
}
