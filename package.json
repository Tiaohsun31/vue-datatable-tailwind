{
  "name": "@tiaohsun/vue-datatable-tailwind",
  "author": "tiaohsun",
  "version": "2.1.3",
  "description": "A Vue 3 data table component restructured and styled with TailwindCSS",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "typings": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Tiaohsun31/vue-datatable-tailwind.git"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    },
    "./style.css": {
      "import": "./dist/vue-datatable-tailwind.css",
      "require": "./dist/vue-datatable-tailwind.css"
    }
  },
  "style": "./dist/vue-datatable-tailwind.css",
  "files": [
    "dist",
    "types"
  ],
  "keywords": [
    "vue3",
    "datatable",
    "tailwindcss",
    "vue-component"
  ],
  "peerDependencies": {
    "vue": "^3.5.13"
  },
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "build:types": "vue-tsc --emitDeclarationOnly",
    "preview": "vite preview",
    "test:unit": "vitest",
    "build-only": "vite build",
    "type-check": "vue-tsc --build --force",
    "lint": "eslint . --fix",
    "format": "prettier --write src/"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.5",
    "@tailwindcss/vite": "^4.1.5",
    "@tsconfig/node22": "^22.0.1",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.15.11",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vitest/eslint-plugin": "1.1.44",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.5.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "eslint": "^9.26.0",
    "eslint-plugin-vue": "^10.1.0",
    "jsdom": "^26.1.0",
    "npm-run-all2": "^8.0.1",
    "prettier": "^3.5.3",
    "tailwindcss": "^4.1.5",
    "typescript": "~5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.3",
    "vite-plugin-vue-devtools": "^7.7.6",
    "vitest": "^3.1.3",
    "vue-tsc": "^2.2.10"
  }
}
